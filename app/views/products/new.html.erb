<div class="product-new-wrapper">
  <div class="product-new-container container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-black">買う物を決める</h1>
        <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.label :商品名, class: 'text-black' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :値段, class: 'text-black' %>
          <%= f.text_field :price, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :説明文, class: 'text-black' %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
        <p><%= f.label :画像 %></p>
        <%= f.file_field :image %>
      　</div>

        <%= f.submit "登録", class: 'btn-block btn-black' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
